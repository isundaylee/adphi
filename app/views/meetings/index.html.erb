<h2>Meetings</h2>

<div class="row">
  <%= form_tag meetings_path do %>
  <div class="large-12 columns">
    <div class="row collapse">
      <div class="small-10 columns">
        <%= text_field_tag :name, 'House Meeting', placeholder: 'The name of the event. ' %>
      </div>
      <div class="small-2 columns">
        <%= submit_tag "Create", class: "button postfix" %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="row">
  <% if !@meetings.blank? %>
    <% for meeting in @meetings %>
      <a href="<%= meeting_path(meeting) %>">
        <div class="small-12 columns entry">
          <p><span class="keywords"><%= meeting.name %></span> on <span class="keywords"><%= friendly_date(meeting.created_at) %></span> at <span class="keywords"><%= friendly_time(meeting.created_at) %></span></p>
        </div>
      </a>
    <% end %>
  <% else %>
    <div class="small-12 columns">
      There are currently no meetings.
    </div>
  <% end %>
</div>